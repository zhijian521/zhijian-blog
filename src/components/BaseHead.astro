---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import '../styles/post-cards.css';
import '../styles/post-markdown.css';
import '../styles/post-sidebar.css';
import '../styles/taxonomy.css';
import type { ImageMetadata } from 'astro';
import { SITE_LOGO, SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata | string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = SITE_LOGO } = Astro.props;
const imageUrl = typeof image === 'string' ? image : image.src;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	rel="stylesheet"
	href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;600;700&display=swap"
/>
<link rel="icon" type="image/png" sizes="32x32" href={SITE_LOGO} />
<link rel="icon" type="image/png" sizes="192x192" href={SITE_LOGO} />
<link rel="apple-touch-icon" href={SITE_LOGO} />
<meta name="theme-color" content="#061018" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(imageUrl, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(imageUrl, Astro.url)} />

<script is:inline>
	(() => {
		const root = document.documentElement;
		if (root.dataset.pageLoadingBound === 'true') {
			return;
		}
		root.dataset.pageLoadingBound = 'true';

		const setLoading = () => {
			root.classList.add('is-page-loading');
			document.body?.setAttribute('aria-busy', 'true');
		};

		const clearLoading = () => {
			root.classList.remove('is-page-loading');
			document.body?.removeAttribute('aria-busy');
		};

		const isPageNavigation = (anchor) => {
			if (!anchor || anchor.hasAttribute('download')) return false;

			const target = anchor.getAttribute('target');
			if (target && target !== '_self') return false;

			const href = anchor.getAttribute('href');
			if (!href || href.startsWith('#')) return false;
			if (href.startsWith('mailto:') || href.startsWith('tel:') || href.startsWith('javascript:')) {
				return false;
			}

			const nextUrl = new URL(anchor.href, location.href);
			const isSamePath = nextUrl.pathname === location.pathname && nextUrl.search === location.search;
			if (isSamePath && nextUrl.hash) return false;

			return nextUrl.href !== location.href;
		};

		const getAnchorFromEvent = (event) => {
			const target = event.target;
			if (target instanceof Element) {
				return target.closest('a[href]');
			}

			const path = typeof event.composedPath === 'function' ? event.composedPath() : [];
			for (const node of path) {
				if (node instanceof HTMLAnchorElement && node.hasAttribute('href')) {
					return node;
				}
			}

			return null;
		};

		const handleNavigationStart = (event) => {
			if (event.defaultPrevented) return;
			if (event.metaKey || event.ctrlKey || event.shiftKey || event.altKey) return;
			if ('button' in event && event.button !== 0) return;

			const anchor = getAnchorFromEvent(event);
			if (!isPageNavigation(anchor)) return;

			setLoading();
		};

		document.addEventListener(
			'pointerdown',
			handleNavigationStart,
			{ capture: true, passive: true }
		);

		document.addEventListener(
			'click',
			handleNavigationStart,
			{ capture: true }
		);

		window.addEventListener('beforeunload', setLoading);
		window.addEventListener('pageshow', clearLoading);

		document.addEventListener('astro:before-preparation', setLoading);
		document.addEventListener('astro:after-swap', clearLoading);

		clearLoading();
	})();
</script>
